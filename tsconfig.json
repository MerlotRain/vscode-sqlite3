{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES6",
		"outDir": "dist",
		"lib": [
			"ES6"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"noUnusedLocals": true,
		"noImplicitAny": true
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude":[
		"node_modules",
		".vscode-test"
	]
}
